doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Foundation 5
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        .panel.text-center
          h1 Internet Movie Database
    .row
      .small-12.columns
        form#movie
          fieldset
            legend Movie
            .row
              .small-3.columns
                button#save Save Movie
              .small-9.columns
            .row
              .small-6.columns
                label Poster
                  input(type='text', name='poster')
              .small-3.columns
                label Name
                  input(type='text', name='name')
              .small-3.columns
                label Rating
                  input(type='text', name='rating')
            .row
              .small-3.columns
                label Studio
                  input(type='text', name='studio')
              .small-3.columns
                label Director
                  input(type='text', name='director')
              .small-3.columns
                label Runtime
                  input(type='text', name='runtime')
              .small-3.columns
                label Release Year
                  input(type='text', name='release')
            .row
              .small-12.columns
                label Actors
                  input(type='text', name='actors')
    .row
      .small-12.columns
        table#movies
          thead
            tr
              th Poster
              th Name
              th Rating
              th Runtime
              th Release Year
              th Studio
              th Actors
              th Director
          tbody

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

