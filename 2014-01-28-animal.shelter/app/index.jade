doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Animal Shelter
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        .panel
          h1 Animal Shelter
   
    .row
      .small-6.columns
        form
          fieldset
            legend Animal Form
            .row
              .small-6.columns
                button.radius.tiny.expand#addAnimal Add Animal
              .small-6.columns
            .row
              .small-3.columns
                label
                  h4 Species
                input#species(type='text', placeholder="species")
              .small-3.columns
                label
                  h4 Color
                input#color(type='text', placeholder="colors")
              .small-6.columns
            .row
              .small-3.columns
                label
                  h4 Age
                input#age(type='text', placeholder="age")
              .small-3.columns
                label 
                  h4 Photo
                input#photoURL(type='text', placeholder="URL")
              .small-6.columns
                label &nbsp
                label &nbsp
                button.radius.tiny#addPhoto Add Photo
             .row
               .small-3.columns
                 label
                   h4 Gender
                 input#gender(type='text', placeholder="gender")
               .small-3.columns
                 label
                   h4 Description
                 textarea#description(type='text', placeholder="description")
               .small-6.columns
      .small-6.columns
        table
          tr
            th Name
            th Species
            th Age
            th Gender
            th Description
            th Color
            th Photos
          

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='js/source/animal.js')
    script(src='js/source/animal_factory.js')
    script(src='/js/source/main.js')
    script.
      $(document).foundation()

